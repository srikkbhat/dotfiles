snippet gcd "gcd of two numbers"
${1:int} gcd($1 a, $1 b){
  if(b==0)return a;
  return gcd(b,a%b);
}
endsnippet

snippet lcm "lcm of two numbers"
${1:int} lcm($1 a, $1 b){
  $1 g=gcd(a,b);
  return (a/g)*b;
}
endsnippet
